<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="LoginTextField" parent="LoginTextField.Base" />

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_3</item>
        <item name="colorPrimaryDark">@color/background_1</item>
        <item name="colorAccent">@color/textColor_1</item>
        <item name="android:colorBackground">@color/background_4</item>
    </style>

    <style name="LoginTextField.Base" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="WhiteProgress">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
